  "description": "",
  "homepage": "",
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "author": {
    "name": "bung87",
    "email": "crc32@qq.com",
    "url": ""
  },
  "files": [
    "lib"
